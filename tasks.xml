<?xml version="1.0"?>

<project name="tasks">

    <property file="build.properties"/>
    <property name="version" value="0.0.1"/>

    <target name="compile" description="Compile Java source.">
        <mkdir dir="${build.dir}/classes"/>
        <javac srcdir="${src.dir}"
               debug="on"
               destdir="${build.dir}/classes"
               source="1.6" target="1.6">
            <classpath refid="compile.classpath"/>
        </javac>
        <copy toDir="${build.dir}/classes">
            <fileset dir="${src.dir}" excludes="**/*.java"/>
        </copy>
    </target>

    <target name="test.compile"
            depends="compile"
            description="Compile test source.">
        <mkdir dir="${build.dir}/tests"/>
        <javac srcdir="${test.dir}"
               debug="on"
               destdir="${build.dir}/tests"
               source="1.6" target="1.6">
            <classpath path="${build.dir}/classes"/>
            <classpath refid="compile.classpath"/>
        </javac>
        <copy toDir="${build.dir}/tests">
            <fileset dir="${test.dir}" excludes="**/*.java"/>
        </copy>
    </target>


    <target name="test"
            depends="test.compile"
            description="Execute JUnit tests.">
        <java fork="true"
              classname="org.junit.runner.JUnitCore"
              failonerror="true">
            <classpath>
                <pathelement location="${build.dir}/tests"/>
                <pathelement location="${build.dir}/classes"/>
                <pathelement location="${lib.dir}/*.jar" />
                <path refid="compile.classpath"/>
            </classpath>
            <arg value="${test.class}"/>
        </java>
    </target>

    <target name="clean"
            description="Remove generated files.">
        <delete dir="${build.dir}"/>
    </target>


    <target name="source.jar"
            description="Create a .jar file with sources">
        <mkdir dir="${build.dir}"/>
        <zip destfile="${build.dir}/${ant.project.name}-${version}-src.jar">
            <fileset dir="src"/>
        </zip>
    </target>

    <target name="distjars"
            depends="source.jar"
            description="Build jar files"/>

    <target name="jar.withdeps" depends="compile"
            description="Build jar.">
        <mkdir dir="${build.dir}/dist"/>
        <dirname property="common.basedir" file="${ant.file.common}"/>
        <echo message="HOHOHO ${common.basedir}"/>
        <taskdef name="jarjar" classname="com.tonicsystems.jarjar.JarJarTask"
                 classpath="${common.basedir}/lib/jarjar-1.4.jar" />
        <jarjar jarfile="${build.dir}/${ant.project.name}-with-deps.jar">
            <fileset dir="${build.dir}/classes"/>
            <zipfileset src="${common.basedir}/lib/diffutils-1.2.1.jar"/>
            <zipfileset src="${common.basedir}/lib/guava-15.0.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.core.contenttype_3.4.200.v20130326-1255.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.core.jobs_3.5.300.v20130429-1813.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.core.resources_3.8.100.v20130521-2026.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.core.runtime_3.9.0.v20130326-1255.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.egit.github.core-3.3.0-SNAPSHOT-sources.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.equinox.common_3.6.200.v20130402-1505.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.equinox.preferences_3.5.100.v20130422-1538.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.jdt.core_3.9.0.v20130604-1421.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.jdt.core.manipulation_1.5.0.v20130605-1748.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.jface_3.9.0.v20130521-1714.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.osgi_3.9.0.v20130529-1710.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.osgi.services-3.5.2.jar"/>
            <zipfileset src="${common.basedir}/lib/org.eclipse.text_3.5.300.v20130515-1451.jar"/>
            <zipfileset src="${common.basedir}/lib/airbase-0.7-SNAPSHOT.jar"/>
        </jarjar>
    </target>


    <target name="manifest" depends="compile">
        <dirname property="common.basedir" file="${ant.file.common}"/>
        <manifest file="${common.basedir}/build/MANIFEST.MF">
            <attribute name="Built-By" value="Huascar A. Sanchez"/>

            <section name="${ant.project.name}">
                <attribute name="Specification-Title" value="Vesper is source code curating framework for Java 5 and above"/>
                <attribute name="Specification-Version" value="Vesper-${version}"/>
                <attribute name="Specification-Vendor" value="University of California Santa Cruz"/>
                <attribute name="Implementation-Title" value="${ant.project.name}"/>
                <attribute name="Implementation-Version" value="Vesper-${version}"/>
                <attribute name="Implementation-Vendor" value="Software Introspection Lab"/>
            </section>
        </manifest>
    </target>

</project>
